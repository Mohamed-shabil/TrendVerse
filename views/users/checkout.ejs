          url:'/cart/checkout',
          data:formData,
          success: function(res){
            if(res.status == "success"){
              location.href = '/account/orders'
            }
          },
          
        })
      }else{
        $.ajax({
        type: 'POST',
        url:'/cart/checkout',
        data:formData,
        success:function(order){
          if(order.payment === 'Wallet'){
            return location.href='/account/orders'
          }
