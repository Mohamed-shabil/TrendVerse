<%- include('partials/_header.ejs') %>
<div class="container mt-5 mb-5">
    <button onclick="window.print()" class="btn btn-primary">Download Invoice</button>
    <div class="row d-flex align-items-center justify-content-center" >
        <div class="col-md-6 col-md-offset-3 body-main">
            <div class="col-md-12">
               <div class="row ">
                    <div class="col-md-4">
                        <img class="img" alt="Invoce Template" src="http://pngimg.com/uploads/shopping_cart/shopping_cart_PNG59.png" />
                    </div>
                    <div class="col-md-8 text-right">
                        <h4><strong>TrendVerse</strong></h4>
                        <p>221 ,Baker Street</p>
                        <p>1800-234-124</p>
                        <p>support@trendverse.com</p>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2>INVOICE</h2>
                        <h5>04854654101</h5>
                    </div>
                </div>
                <br />
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><h5>Description</h5></th>
                                <th><h5>Amount</h5></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders[0].products.product.forEach((product)=>{ %>
                                <tr>
                                    <td class="col-md-9"><%=product.name%></td>
                                    <td class="col-md-3"><i class="fas fa-rupee-sign" area-hidden="true"></i>₹ <%=product.price%> %> </td>
                                </tr>
                            <% }) %>
                            <tr>
                                <td class="text-right">
                                
                                <p>
                                    <strong>Total Amount: </strong>
                                </p>
							    
							    <p>
                                    <strong>Payable Amount: </strong>
                                </p>
							    </td>
                                <td>
                               
                                <p>
                                    <strong><i class="fas fa-rupee-sign" area-hidden="true"></i>₹ <%= orders[0].totalPrice %></strong>
                                </p>
							    <p>
                                    <strong><i class="fas fa-rupee-sign" area-hidden="true"></i>₹ <%= orders[0].totalPrice %></strong>
                                </p>
							    </td>
                            </tr>
                            <tr style="color: #F81D2D;">
                                <td class="text-right"><h4><strong>Total:</strong></h4></td>
                                <td class="text-left"><h4><strong><i class="fas fa-rupee-sign" area-hidden="true"></i> ₹ <%= orders[0].totalPrice %> </strong></h4></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div>
                    <div class="col-md-12">
                        <p><b>Date :</b> <%= orders[0].orderDate.toDateString() %></p>
                        <br />
                        <p><b>Signature</b></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<%- include('./partials/_footer.ejs') %>
