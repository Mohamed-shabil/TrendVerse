<%- include('../partials/_header') %>
    <body>
    <%- include('../partials/_navbar',) %>

    <div class="container">
        <h2 class="text-center mt-4">My Orders</h2>
        <div class="row d-flex  justify-content-center">
            <% orders.forEach((order) => {%>
                <div class="card col-md-5">
                    <div class="row ">
                      <div class="col-md-4 p-0">
                        <img src="/products/<%=order.products.product[0].images[0]%>" class=" w-100 h-100 img-fluid rounded" alt="...">
                      </div>
                      <div class="col-md-8 p-0 d-flex align-items-center">
                        <div class="card-body ">
                          <h4 class="card-title"><%=order.products.product[0].name%></h5>
                          <p class="card-text">Quantity : <%=order.products.quantity%></p>
                          <p>Order Status : <button disabled class="<%=order.status%>"><%=order.status%></button></p>
                          <p class="card-text"><small class="text-body-secondary"><%=order.orderDate.toDateString()%></small></p>
                            
                        </div>
                      </div>
                    </div>
                </div>
            <%}) %>
        </div>
    </div>
<%- include('../partials/_footer',) %>