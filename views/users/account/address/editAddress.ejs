<%- include('../../partials/_header') %>
    <body>
    <%- include('../../partials/_navbar') %>

    <div class="container">
        <form action="/account/address/editAddress/<%=address._id%>?_method=PUT" method="post">
            <div class="row">
                <div class="col addAddress_input">
                  <label>Name</label>
                  <input type="text" class="form-control" value="<%=address.name%>" name="name" placeholder="name" aria-label="First name">
                </div>
                <div class="col addAddress_input">
                  <label>Phone</label>
                  <input type="text" class="form-control" minlength="6" oninput="restrictToNumbers(event)" maxlength="10"pattern=".{10}" title="Phone Number must be 10 numbers long" value="<%=address.phone%>" name="phone" placeholder="Phone number" aria-label="Last name">
                </div>
            </div>
            <div class="row">
                <div class="col addAddress_input">
                  <label>Pincode</label>
                  <input type="text" class="form-control" oninput="restrictToNumbers(event)" maxlength="6" pattern=".{6}" title="Picode must be 6 numbers long" value="<%=address.pincode%>" name="pincode" placeholder="pincode" aria-label="First name">
                </div>
                <div class="col addAddress_input">
                  <label>Alternative Number</label>
                  <input type="text" class="form-control" minlength="6" oninput="restrictToNumbers(event)" maxlength="10"pattern=".{10}" title="Phone Number must be 10 numbers long" value="<%=address.alternativePhoneNumber%>" name="altNo" placeholder="alternative phone" aria-label="First name">
                </div>
            </div>
            <div class="row">
              <div class="col addAddress_input ">
                <label>City</label>
                <input type="text" class="form-control" value="<%=address.city%>" name="city" placeholder="City" aria-label="Last name">
              </div>
                <div class="col addAddress_input">
                  <label>Locality</label>
                  <input type="text" class="form-control" value="<%=address.locality%>" name="locality" placeholder="locality" aria-label="First name">
                </div>
            </div>
            <div class="row">
                <div class="col-6 addAddress_input">
                  <label for="">LandMark</label>
                  <input type="text" class="form-control" value="<%=address.landMark%>" name="landMark" placeholder="landMark" aria-label="Last name">
                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <script>
      function restrictToNumbers(event) {
      const input = event.target;
      const currentValue = input.value;
      const newValue = currentValue.replace(/[^0-9]/g, '');
      input.value = newValue;
    }
    </script>
