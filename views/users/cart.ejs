<%- include('./partials/_header') %>
<body>
    <%- include('./partials/_navbar') %>
    <section class="shopping-cart spad">
        <div class="container">
            <%if(!cart.length){%>
                <div class="d-flex align-items-center justify-content-center">
                    <h3>Your cart is Empty</h3>
                </div>
            <%}else{%>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="shopping__cart__table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%cart.forEach((item)=>{%>
                                                <tr>
                                                    <td class="product__cart__item">
                                                        <div class="product__cart__item__pic">
                                                            <img src="/products/<%=item.product.images[0]%>" alt="">
                                                        </div>
                                                        <div class="product__cart__item__text">
                                                            <h6><%=item.product.name%></h6>
                                                            <h5>₹ <%=item.product.price%></h5>
                                                        </div>
                                                    </td>
                                                    <td class="quantity__item">
                                                        <form id="decrement_Quantity" action="/cart/<%=item.product._id%>?_method=PATCH" method="post">
                                                            <div class="quantity" >
                                                                <input type="hidden" name="productId" value="<%=item.product._id%>">
                                                                <input type="hidden" name="quantityDecrement" value="<%=item.quantity%>">
                                                                <button type="submit" class="quantity_changer">-</button>
                                                            </div>
                                                        </form>
                                                        <input type="number" id="quantity_display" name="quantity" class="quantity_input" disabled value="<%=item.quantity%>">
                                                        <form id="inc">
                                                            <input type="hidden" name="productId" value="<%=item.product._id%>">
                                                            <input type="hidden" name="quantityIncrement"  value="<%=item.quantity%>" >
                                                            <div class="quantity">
                                                                <button type="submit"  class="quantity_changer">+</button>
                                                            </div>
                                                        </form>
                                                    </td>
                                                    <td class="cart__price">₹<%=item.totalAmount%></td>
                                                    <td class="cart__close">
                                                        <form action="/cart?_method=DELETE" method="post">
                                                            <input type="hidden" name="id" value="<%=item._id%>">
                                                            <button type="submit" class="remove_cart"><i class="fa fa-close"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="continue__btn">
                                    <a href="/shop">Continue Shopping</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="cart__discount">
                            <h6>Discount codes</h6>
                            <form action="/cart/coupon" method="post">
                                <input type="text" name="coupon" placeholder="Coupon code">
                                <button type="submit">Apply</button>
                            </form>
                        </div>
                        <div class="cart__total">
                            <h6>Cart total</h6>
                            <ul>
                                <li>Subtotal <span>₹ <%=totalCartValue%></span></li>
                                <li>Total <span>₹ <%=totalCartValue%></span></li>
                            </ul>
                            <a href="/cart/checkout" class="primary-btn">Proceed to checkout</a>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('#inc').submit((e)=>{
            e.preventDefault();
            var IncArray = $(this).serializeArray();
            let increment ={}
            $.each(IncArray,function(index, field) {
                increment[field.name] = field.value;
            }); 
            console.log(increment);
            $.ajax({
                type:'PATCH',
                url:`/cart/${increment.productId}`,
                data:increment,
                success:function(res){
                    document.getElementById('quantity_display').value = res.data.quantity
                    document.getElementById('cartPrice').textContent = res.data.totalCartValue
                }
            })
        })
    })
</script>

<%- include('./partials/_footer') %>
