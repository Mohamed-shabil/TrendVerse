<%- include('partials/_header.ejs') %>
<body>
  <div class="container-scroller">
    <!-- partial:../../partials/_sidebar.html -->
    <%- include('partials/_sidebar.ejs') %>

    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <%- include('partials/_navbar.ejs') %>

      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0">₹ <%=monthSales[monthSales.length-1].totalSales %></h3>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-success">
                        <span class="mdi mdi-arrow-top-right icon-item"></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Monthly Sales</h6>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0">₹<%=totalRevenue[0].totalRevenue%></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium">
                          +11%
                        </p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-success">
                        <span class="mdi mdi-arrow-top-right icon-item"></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">
                    Lifetime Revenue
                  </h6>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%=todaysRevenue[0]?todaysRevenue[0].todaysSales : 0%></h3>
                        <p class="text-danger ml-2 mb-0 font-weight-medium">
                          -2.4%
                        </p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-danger">
                        <span
                          class="mdi mdi-arrow-bottom-left icon-item"
                        ></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Daily Income</h6>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0">$31.53</h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium">
                          +3.5%
                        </p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-success">
                        <span class="mdi mdi-arrow-top-right icon-item"></span>
                      </div>
                    </div>
                  </div>
                  <h6 class="text-muted font-weight-normal">Expense current</h6>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <canvas id="monthlySalesChart" width="600" height="200"></canvas>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Transaction History</h4>
                  <canvas id="transaction-split" class="transaction-chart"></canvas>
                  <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3" >
                    <div class="text-md-center text-xl-left">
                      <h6 class="mb-1">Transfer through Online</h6>
                      <p class="text-muted mb-0"><%=paymentStatics[0]._id%></p>
                    </div>
                    <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                      <h6 class="font-weight-bold mb-0">₹ <%=paymentStatics[0].totalAmount%></h6>
                    </div>
                  </div>
                  <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                    <div class="text-md-center text-xl-left">
                      <h6 class="mb-1">Cash On Deliveries</h6>
                      <p class="text-muted mb-0">07 Jan 2019, 09:12AM</p>
                    </div>
                    <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                      <h6 class="font-weight-bold mb-0">₹<%=paymentStatics[1].totalAmount%></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-row justify-content-between">
                    <h4 class="card-title mb-1">Top Selling Products</h4>
                    <p class="text-muted mb-1">Total Stock Sold</p>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="preview-list">
                        <% topSellingProducts.forEach((product) => { %>
                        <div class="preview-item border-bottom">
                          <div class="preview-thumbnail">
                            <div class="preview-icon bg-primary">
                              <img
                                src="/products/<%=product.productInfo.images[0] %>"
                                alt=""
                                srcset=""
                              />
                            </div>
                          </div>
                          <div class="preview-item-content d-sm-flex flex-grow">
                            <div class="flex-grow">
                              <h6 class="preview-subject truncate">
                                <%=product.productInfo.name%>
                              </h6>
                              <p class="text-muted mb-0 truncate">
                                ₹<%=product.productInfo.price%>
                              </p>
                            </div>
                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                              <h6 class="text-white">
                                Quantity Sold: <%=product.totalQuantitySold %>
                              </h6>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-row justify-content-between">
                    <h4 class="card-title mb-1">Top Category</h4>
                    <p class="text-muted mb-1">Products Sold</p>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="preview-list">
                        <% topSellingCategory.forEach((category) => { %>
                        <div class="preview-item border-bottom">
                          <div class="preview-thumbnail">
                            <div class="preview-icon ">
                              <img
                                src="/category/<%=category.category[0].image %>"
                                alt=""
                                srcset=""
                              />
                            </div>
                          </div>
                          <div class="preview-item-content d-sm-flex flex-grow">
                            <div class="flex-grow">
                              <h6 class="preview-subject truncate text-capitalize">
                                <%=category._id%>
                              </h6>
                              <!-- <p class="text-muted mb-0 truncate">
                                ₹%>
                              </p> -->
                            </div>
                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                              <h6 class="text-white">
                                Quantity Sold: <%=category.totalQuantitySold%>
                              </h6>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-4 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h5>Total Users</h5>
                  <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                      <div class="d-flex d-sm-block d-md-flex align-items-center">
                        <h2 class="mb-0"><%=totalUsers%></h2>
                        <p class="text-success ml-2 mb-0 font-weight-medium">
                          
                        </p>
                      </div>
                      <h6 class="text-muted font-weight-normal">
                        
                      </h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                      <i class="icon-lg bi bi-people text-primary ml-auto"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-4 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h5>Total Orders</h5>
                  <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                      <div
                        class="d-flex d-sm-block d-md-flex align-items-center"
                      >
                        <h2 class="mb-0"><%= totalOrders[0].totalOrders %></h2>
                        <p class="text-success ml-2 mb-0 font-weight-medium">
                          
                        </p>
                      </div>
                      <h6 class="text-muted font-weight-normal">
                      
                      </h6>
                    </div>
                    <div
                      class="col-4 col-sm-12 col-xl-4 text-center text-xl-right"
                    >
                      <i
                        class="icon-lg bi bi-bag-check text-success ml-auto"
                      ></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-4 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h5>Blocked Users</h5>
                  <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                      <div
                        class="d-flex d-sm-block d-md-flex align-items-center"
                      >
                        <h2 class="mb-0"><%=blockedUser%></h2>
                        
                      </div>
                      
                    </div>
                    <div
                      class="col-4 col-sm-12 col-xl-4 text-center text-xl-right"
                    >
                      <i
                        class="icon-lg bi bi-person-fill-x text-danger ml-auto"
                      ></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Pending Orders</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>
                          </th>
                          <th>Client Address</th>
                          <th>Order No</th>
                          <th>Order Cost</th>
                          <th>Payment Method</th>
                          <th>Order Date</th>
                          <th>Order Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%pendingOrders.forEach((order)=>{%>

                          <tr>
                            <td>
                              <a href="/admin/orders/<%=order.orderId%>" class="fs-1"><i class="bi bi-arrow-bar-right"></i></a>
                            </td>
                            <td>
                              <span class="pl-2"><%=order.productsInfo[0].name %></span>
                            </td>
                            <td><small><%=order.orderId%></small></td>
                            <td><%=order.products[0].quantity%></td>
                            <td><%=order.paymentMethod %></td>
                            <td><%=order.orderDate.toDateString()%></td>
                            <td>
                              <div class="badge badge-outline-warning">
                                Pending
                              </div>
                            </td>
                          </tr>
                        <%}) %>
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
          <div
            class="d-sm-flex justify-content-center justify-content-sm-between"
          >
            <span
              class="text-muted d-block text-center text-sm-left d-sm-inline-block"
              >Copyright © bootstrapdash.com 2020</span
            >
            <span
              class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"
            >
              Free
              <a
                href="https://www.bootstrapdash.com/bootstrap-admin-template/"
                target="_blank"
                >Bootstrap admin templates</a
              >
              from Bootstrapdash.com</span
            >
          </div>
        </footer>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <script>
    const ctx = document.getElementById("transaction-split").getContext("2d");
    const label = "<%=paymentStatics.map(item => item._id)%>";
    const labelArray = label.split(",");
    const amounts = "<%=paymentStatics.map(item => item.totalAmount)%>";
    const amountArray = amounts.split(",").map((item) => item * 1);
    console.log(amountArray);
    const myChart = new Chart(ctx, {
      type: "doughnut",
      data: {
        labels: labelArray,
        datasets: [
          {
            data: amountArray,
            backgroundColor: [
              "rgba(255, 99, 132, 0.2)",
              "rgba(255, 159, 64, 0.2)",
              "rgba(255, 205, 86, 0.2)",
              "rgba(75, 192, 192, 0.2)",
              "rgba(54, 162, 235, 0.2)",
              "rgba(153, 102, 255, 0.2)",
              "rgba(201, 203, 207, 0.2)",
            ],
            borderColor: [
              "rgb(255, 99, 132)",
              "rgb(255, 159, 64)",
              "rgb(255, 205, 86)",
              "rgb(75, 192, 192)",
              "rgb(54, 162, 235)",
              "rgb(153, 102, 255)",
              "rgb(201, 203, 207)",
            ],
            weight: 20,
          },
        ],
      },
      options: {
        cutoutPercentage: 50,
      },
    });



    
    let yearlyData = '<%=yearlyData%>'
    const yearlyDataArray = yearlyData.split(',').map((item) =>{return item * 1})
    console.log(yearlyDataArray);
    const monthlySalesData = {
      labels: [
        "January",
        "February",
        "March",
        "April",
        "May",
        "June",
        "July",
        "August",
        "September",
        "October",
        "November",
        "December",
      ],
      datasets: [
        {
          label: "Monthly Sales",
          data: yearlyDataArray, // Replace with your actual monthly sales data
          backgroundColor: [
            "rgba(255, 99, 132, 0.2)",
            "rgba(255, 159, 64, 0.2)",
            "rgba(255, 205, 86, 0.2)",
            "rgba(75, 192, 192, 0.2)",
            "rgba(54, 162, 235, 0.2)",
            "rgba(153, 102, 255, 0.2)",
            "rgba(201, 203, 207, 0.2)",
          ],
          borderColor: [
            "rgb(255, 99, 132)",
            "rgb(255, 159, 64)",
            "rgb(255, 205, 86)",
            "rgb(75, 192, 192)",
            "rgb(54, 162, 235)",
            "rgb(153, 102, 255)",
            "rgb(201, 203, 207)",
          ],
          borderWidth: 1, // Border width
        },
      ],
      plugins: {
          title: {
              display: true,
              text: 'Custom Chart Title'
          }
      }
    };

    const options = {
      scales: {
        y: {
          beginAtZero: true, // Start the y-axis at zero
        },
      },

    };

    const ctx1 = document.getElementById("monthlySalesChart").getContext("2d");
    const monthlySalesChart = new Chart(ctx1, {
      type: "bar",
      data: monthlySalesData,
      options: options,
    });
  </script>
  <%- include('./partials/_footer.ejs') %>
</body>
